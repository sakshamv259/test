{
    "compilerOptions": {
      "target": "es5",
      "lib": ["es2015", "dom"],
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "skipLibCheck": true
    },
    "include": ["src/**/*"]
  }
  